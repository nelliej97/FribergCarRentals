@model FribergCarRentals.Models.Booking

@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Bokningsdetaljer";
    var isAdmin = User.IsInRole("Admin");
}

<h1>Bokningsdetaljer</h1>

<div>
    <h4>Bokning</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Bil
        </dt>
        <dd class="col-sm-10">
            @Model.Car.Brand @Model.Car.Model
        </dd>

        <dt class="col-sm-2">
            Kund
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.FirstName @Model.Customer.LastName
        </dd>

        <dt class="col-sm-2">
            Startdatum
        </dt>
        <dd class="col-sm-10">
            @Model.StartDate.ToShortDateString()
        </dd>

        <dt class="col-sm-2">
            Slutdatum
        </dt>
        <dd class="col-sm-10">
            @Model.EndDate.ToShortDateString()
        </dd>
    </dl>
</div>

<div>
    @if (isAdmin)
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Redigera</a>
        <text> | </text>
    }
    <a asp-action="Index">Tillbaka till listan</a>
</div>
