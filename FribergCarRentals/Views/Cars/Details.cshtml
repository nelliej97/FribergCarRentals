@model FribergCarRentals.Models.Car

@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Detaljer";
    var isAdmin = User.IsInRole("Admin");
}

<h1>Detaljer</h1>

<div>
    <h4>Bil</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Märke
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>

        <dt class="col-sm-2">
            Modell
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>

        <dt class="col-sm-2">
            Färg
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>

        <dt class="col-sm-2">
            Tillgänglig
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsAvailable)
        </dd>

        <dt class="col-sm-2">
            Bild
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ImageUrl" alt="Bilbild" width="300" />
        </dd>
    </dl>
</div>

<div>
    @if (isAdmin)
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Redigera</a>
        <text> | </text>
    }
    <a asp-action="Index">Tillbaka till listan</a>
</div>
